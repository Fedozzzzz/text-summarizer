{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "object-curly-spacing": ["error", "always"],
        "max-len": ["error", { "code": 100 }],
        "no-multi-spaces": "error",
        "quotes": [2, "single", { "avoidEscape": true }],
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "no-undef": "off"
    }
}
